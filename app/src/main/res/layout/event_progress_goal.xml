<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/event_time_background"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/text_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/Kanit_Medium.Default.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TriatlÃ³n Sprint" />

            <TextView
                style="@style/Kanit_Regular.Secondary.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 octubre 2022" />
        </LinearLayout>

        <com.zhouyou.view.seekbar.SignSeekBar
            android:id="@+id/progressBar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="17dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.468"
            app:ssb_progress="67"
            app:ssb_second_track_color="#0095FF"
            app:ssb_show_sign="true"
            app:ssb_sign_arrow_height="5dp"
            app:ssb_sign_arrow_width="10dp"
            app:ssb_sign_border_color="#ED3A3A"
            app:ssb_sign_color="#ED3A3A"
            app:ssb_sign_height="24dp"
            app:ssb_sign_width="@dimen/dimen_36dp"
            app:ssb_track_color="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
