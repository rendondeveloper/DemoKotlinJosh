<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.reusableview.home.SliderHomeView">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/dimen_32dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/Kanit_Bold_Italic.Default.24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Gran Fondo Adolfo Lagos izzi kardias 2022"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/Kanit_Semibold.Default.20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:text="Ciudad de MÃ©xico"
            android:textColor="@color/white" />

        <TextView
            style="@style/Kanit_Regular.Default.16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_marginTop="4dp"
            android:text="5 de marzo 2022"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/steps"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                style="@style/Kanit_Regular.Default.16"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                android:background="@drawable/tertiary_button"
                android:textAllCaps="false"
                android:text="Ver detalles" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:background="@drawable/pill_background"
                android:textAllCaps="false"
                android:text="Inscribirme"
                android:textColor="@color/white"
                style="@style/Kanit_Regular.Default.16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/firstButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                style="@style/Kanit_Bold.Default.16"
                android:background="@android:color/transparent"
                android:text="01" />

            <Button
                android:id="@+id/secondButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/gray_400"
                style="@style/Kanit_Regular.Default.16"
                android:background="@android:color/transparent"
                android:text="02" />

            <Button
                android:id="@+id/thirdButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/gray_400"
                style="@style/Kanit_Regular.Default.16"
                android:background="@android:color/transparent"
                android:text="03" />

            <Button
                android:id="@+id/fourthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/gray_400"
                style="@style/Kanit_Regular.Default.16"
                android:background="@android:color/transparent"
                android:text="04" />

            <Button
                android:id="@+id/fiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/gray_400"
                style="@style/Kanit_Regular.Default.16"
                android:background="@android:color/transparent"
                android:text="05" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>