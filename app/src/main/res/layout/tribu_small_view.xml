<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/tribu_card_background"
        android:layout_marginEnd="8dp"
        android:elevation="0dp"
        android:padding="2dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/corners_top_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tribu_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/avatar_dummy"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                app:civ_circle_background_color="@color/white_dynamic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privado"
                android:gravity="center_horizontal"
                style="@style/Kanit_Bold.Default.10"
                android:maxLines="2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Triatlón"
                style="@style/Kanit_Medium.Default.12"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="205 miembros"
                style="@style/Kanit_Medium.Secondary.10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Triatlón"
                android:layout_marginBottom="12dp"
                style="@style/Kanit_Medium.Default.10"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnirme"
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/secondary_button"
                android:paddingStart="7dp"
                android:paddingTop="0dp"
                android:paddingEnd="7dp"
                android:paddingBottom="0dp"
                android:text="Unirme"
                android:textAllCaps="false"
                android:textColor="@color/black_dynamic"
                app:backgroundTint="@color/black_dynamic" />

        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>