<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="@dimen/dimen_32dp"
    android:background="@color/white_dynamic"
    android:orientation="vertical">

    <TextView
        style="@style/Kanit_Bold_Italic.Default.20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envío de kit a domicilio"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/shape_black"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item_gray_2"
            android:orientation="vertical"
            android:padding="@dimen/dimen_24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_delivery_address" />

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:text="@string/kit_delivery_description_card" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/Kanit_Medium.Default.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:text="Deberás presentar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="wrap_content"
                android:text="1." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Kanit_Regular.Default.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check in realizado en tu APP/ captura de pantalla: Tutorial para que hagas tu check in" />

                <TextView
                    style="@style/Kanit_Medium.Orange.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://youtu.be/3iobiSRQtZo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="wrap_content"
                android:text="2." />

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si no puedes hacer tu check in, deberás presentar tu exoneración impresa y firmada en original y alguna IDENTIFICACIÓN OFICIAL. Exoneración" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="wrap_content"
                android:text="3." />

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llevar tu carta de confirmación con número de competidor, enlace para recuperar carta y tutorial de cómo conseguir su número de competidor en el APP." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="wrap_content"
                android:text="4." />

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprobante de vacunación completo o prueba COVID negativa de no más de 48 horas antes de la entrega de paquetes." />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/Kanit_Regular.Default.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="Si pagaste tu envío a domicilio: Tu guía de rastreo te llegará a partir del lunes 14 de febrero del 2022, en la semana previa al evento se comenzarán a realizar los envíos." />

</LinearLayout>