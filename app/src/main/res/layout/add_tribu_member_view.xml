<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="0dp"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/avatarman"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:civ_circle_background_color="@color/white_dynamic"/>

        <LinearLayout
            android:id="@+id/profile_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/profile_image"
            android:layout_toStartOf="@+id/add_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lupe Olvera"
                style="@style/Kanit_Bold.Default.16"
                android:maxLines="2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 amigos en comÃºn"
                style="@style/Kanit_Regular.Secondary.14"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            style="@style/Kanit_Regular.Default.14"
            android:textColor="@color/black_dynamic"
            android:background="@drawable/secondary_button"
            app:backgroundTint="@color/black_dynamic"
            android:text="Agregar"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>