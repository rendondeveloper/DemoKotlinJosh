<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_black"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_gray_2"
        android:orientation="vertical"       >

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/ivImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_dummy_run_group"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="22dp"
            />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Kanit_Bold_Italic.Default.20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Individual"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/Kanit_Regular.Default.14"
            android:textColor="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:paddingBottom="12dp"
            tools:text="La línea 2 del Metrobús o estación del metro tal te queda a 5 min caminando, si llegas en transporte privado, pide que te dejen en la plaza tal, si llegas en auto privado el estacionamiento tal." />

    </LinearLayout>

</LinearLayout>
