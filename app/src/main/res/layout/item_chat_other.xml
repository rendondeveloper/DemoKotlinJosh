<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/date_other"
        style="@style/Kanit_Medium.Default.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="6 de Noviembre"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/date_other_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32dp"
            app:srcCompat="@drawable/default_photo_group" />

        <TextView
            style="@style/Kanit_Bold.Default.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Ernesto, Carlos, Lupe"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView36"
            style="@style/Kanit_Medium.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="Creaste este grupo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView47"
            style="@style/Kanit_Regular.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="21 Noviembre 2022"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView49"
            style="@style/Kanit_Medium.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="14:00"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView48"
            style="@style/Kanit_Regular.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:text="Agregaste a Carlos Hurtado LÃ³pez al grupo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView51"
            style="@style/Kanit_Regular.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_50dp"
            android:text="Agregaste a Lupe Olvera al grupo"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_other"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/avatar_dummy"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="20dp"
            app:civ_border_width="0dp"
            app:civ_circle_background_color="@color/secondary_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="9dp"
            android:layout_gravity="end">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/dark_blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/message_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="260dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="12dp"
                        android:text="This is a Message"
                        android:textColor="@color/white"
                        style="@style/Kanit_Regular.Default.14" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/timestamp_other"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:text="Hace 2 horas"
                android:textColor="@color/gray_400"
                style="@style/Kanit_Regular.Secondary.10" />

        </LinearLayout>




    </LinearLayout>




</LinearLayout>