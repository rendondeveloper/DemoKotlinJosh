<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="16dp"
    android:backgroundTint="@color/secondary_background"
    android:background="@color/secondary_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/dimen_icon_24dp"
            android:layout_height="@dimen/dimen_icon_24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_dummy_t_shirt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black_dynamic" />

        <TextView
            android:id="@+id/tvName"
            style="@style/Kanit_Regular.Default.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Playera" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>