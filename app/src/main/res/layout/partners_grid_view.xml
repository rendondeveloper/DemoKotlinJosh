<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/Kanit_Regular.Secondary.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="@string/comercial_asociations"
        android:textColor="@color/label_primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/partner_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socio1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/partner_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socio2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/partner_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socio3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/partner_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socio4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/partner_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socio5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/partner_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socio6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>