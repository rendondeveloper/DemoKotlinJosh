<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/Kanit_Regular.Secondary.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/comercial_asociations"
        android:textColor="@color/label_primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/partner_border"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/partner_epura" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/partner_border"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/partner_aeromexico" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/partner_border"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/partner_santander" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/partner_border"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/partner_gatorade" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/partner_border"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/partner_gmc" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/partner_border"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/partner_innova" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>