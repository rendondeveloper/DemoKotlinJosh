<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileDetailsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Mis beneficios"
        app:titleTextColor="@color/black_dynamic"
        app:navigationIcon="@drawable/arrow_left"
        app:navigationIconTint="@color/black_dynamic"
        android:theme="@style/AsdToolbarTheme"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/secondary_background"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:endColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/black_dynamic"
                app:tabTextColor="@color/label_secondary"
                app:tabMode="fixed"
                app:flow_horizontalAlign="start"
                app:tabGravity="fill">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mis Beneficios" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservaciones" />

            </com.google.android.material.tabs.TabLayout>

            <LinearLayout
                android:id="@+id/events_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="19dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@color/secondary_background"
                    android:layout_marginBottom="19dp"/>

                <RelativeLayout
                    android:id="@+id/events_title"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/secondary_background"
                    android:padding="16dp"
                    android:layout_marginHorizontal="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Eventos"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        style="@style/Kanit_Regular.Default.16"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add"
                        android:layout_alignParentEnd="true"
                        app:tint="@color/black_dynamic"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/event_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="16dp">

                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/health_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="19dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@color/secondary_background"
                    android:layout_marginBottom="19dp"/>

                <RelativeLayout
                    android:id="@+id/health_title"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/secondary_background"
                    android:padding="16dp"
                    android:layout_marginHorizontal="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Salud"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        style="@style/Kanit_Regular.Default.16"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add"
                        android:layout_alignParentEnd="true"
                        app:tint="@color/black_dynamic"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/health_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="16dp">

                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.asdeporte.asdeportev2.ui.reusableview.profile.BenefitsView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="@color/secondary_background"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>