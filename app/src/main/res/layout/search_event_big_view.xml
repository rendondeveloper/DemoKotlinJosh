<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_dynamic"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="@dimen/dimen_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            style="@style/Kanit_Bold_Italic.Default.24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Encuentra tu evento"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchTextField"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginBottom="10dp"
            android:hint="@string/btn_search"
            app:endIconDrawable="@drawable/ic_search"
            app:endIconMode="custom"
            app:endIconTint="@color/black_dynamic"
            app:hintTextColor="@color/black_dynamic">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchTextInput"
                style="@style/Kanit_Regular.Default.16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_dynamic"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sportTextField"
            style="@style/MenuTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginBottom="10dp"
            android:hint="Tipo de deporte"
            app:endIconDrawable="@drawable/arrow_down_sec"
            app:endIconTint="@color/black_dynamic"
            app:hintTextColor="@color/black_dynamic">

            <AutoCompleteTextView
                android:id="@+id/sportTextInput"
                style="@style/Kanit_Regular.Default.16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_dynamic"
                android:focusable="false"
                android:inputType="none"
                android:padding="15dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dateTextField"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:hint="@string/event_date"
            app:endIconDrawable="@drawable/calendar_icon"
            app:endIconMode="custom"
            app:endIconTint="@color/black_dynamic"
            app:hintTextColor="@color/black_dynamic">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateTextInput"
                style="@style/Kanit_Regular.Default.16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_dynamic"
                android:focusable="false"
                android:inputType="date" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            style="@style/Kanit_Medium.Default.16"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/pill_background"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="@string/btn_search"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>