                    style="@style/Kanit_Extra_Bold.Default.20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Corredores Narvarte" />

                <TextView
                    style="@style/Kanit_Regular.Default.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Running" />

            </LinearLayout>

            <ImageButton
        android:contentDescription="imageBotton"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="-35dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_right"
                app:tint="@color/black_dynamic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Kanit_Regular.Default.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tribu principal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="|" />

            <TextView
                style="@style/Kanit_Semibold.Default.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin: Ernesto Torres" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="|" />

            <TextView
                style="@style/Kanit_Regular.Default.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 miembros" />

        </LinearLayout>

    </LinearLayout>

