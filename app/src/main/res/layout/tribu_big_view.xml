                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/avatarman"
                android:layout_margin="12dp"
                app:civ_circle_background_color="@color/white_dynamic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="40dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="PÃšBLICO"
                    style="@style/Kanit_Regular.Default.12"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Corredores Narvarte"
                    style="@style/Kanit_Extra_Bold.Default.20"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="Running"
                    style="@style/Kanit_Regular.Default.14"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-35dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/arrow_right"
                app:tint="@color/black_dynamic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tribu principal"
                style="@style/Kanit_Regular.Default.12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="|"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin: Ernesto Torres"
                style="@style/Kanit_Semibold.Default.12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="|"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 miembros"
                style="@style/Kanit_Regular.Default.12"/>

        </LinearLayout>

    </LinearLayout>

