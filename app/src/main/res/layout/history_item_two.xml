<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_gray"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:id="@+id/clItemHistory">

    <TextView
        android:id="@+id/tvDate"
        style="@style/Kanit_Regular.Secondary.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="30/04/2023"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tvScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMidLabel" />


    <TextView
        android:id="@+id/tvMidLabel"
        style="@style/Kanit_Regular.Secondary.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Puntaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        style="@style/Kanit_Medium.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="85 Pts."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMidLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvMidLabel" />


    <View
        android:id="@+id/vSeparator2"
        android:layout_width="1dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray_text"
        app:layout_constraintBottom_toBottomOf="@+id/tvTime"
        app:layout_constraintEnd_toStartOf="@+id/tvTimeLabel"
        app:layout_constraintStart_toEndOf="@+id/tvMidLabel"
        app:layout_constraintTop_toTopOf="@+id/tvTimeLabel" />


    <TextView
        android:id="@+id/tvTimeLabel"
        style="@style/Kanit_Medium.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:text="Tiempo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTime"
        style="@style/Kanit_Semi_Bold.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="08:00:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTimeLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>