<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/shape_gray">

    <TextView
        android:id="@+id/textView001"
        style="@style/Kanit_Bold_Italic.Default.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="19dp"
        android:text="PROMEDIO DE HORAS DE SUEÃ‘O"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView002"
        style="@style/Kanit_Regular.Secondary.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Tiempo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView001" />

    <TextView
        android:id="@+id/textView003"
        style="@style/Kanit_Semibold.Default.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="7:15hrs"
        app:layout_constraintStart_toStartOf="@+id/textView002"
        app:layout_constraintTop_toBottomOf="@+id/textView002" />

    <TextView
        android:id="@+id/textView004"
        style="@style/Kanit_Regular.Secondary.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="Puntaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView001" />

    <TextView
        android:id="@+id/textView005"
        style="@style/Kanit_Semibold.Default.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85 pts"
        app:layout_constraintStart_toStartOf="@+id/textView004"
        app:layout_constraintTop_toBottomOf="@+id/textView004" />

    <View
        android:id="@+id/view31"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_item_gradient_sleep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/llData"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="@+id/view31"
        app:layout_constraintStart_toStartOf="@+id/view31"
        app:layout_constraintTop_toBottomOf="@+id/view31">

        <TextView
            style="@style/Kanit_Semibold.Default.14"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="2" />

        <TextView
            style="@style/Kanit_Semibold.Default.14"
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="4" />

        <TextView
            style="@style/Kanit_Semibold.Default.14"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="6" />

        <TextView
            style="@style/Kanit_Semibold.Default.14"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="8" />

        <TextView
            style="@style/Kanit_Semibold.Default.14"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="10" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>