<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="8dp"
    android:background="@color/white_dynamic">

    <androidx.cardview.widget.CardView
        android:id="@+id/monthlyCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
            android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@color/dark_blue"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:src="@drawable/service_water_bottle" />

            <ImageView
            android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="-12dp"
                android:layout_marginEnd="-10dp"
                android:contentDescription="@string/todo"
                android:rotation="270"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_down"
                app:tint="@color/dark_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="9dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_view"
                    style="@style/Kanit_Semi_Bold.Default.16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HidrataciÃ³n"
                    android:textColor="@color/dark_blue" />

                <TextView
                    android:id="@+id/subtitle_view"
                    style="@style/Kanit_Regular.Default.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durante la ruta"
                    android:textColor="@color/dark_blue" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>