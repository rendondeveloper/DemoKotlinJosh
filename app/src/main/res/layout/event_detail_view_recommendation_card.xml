<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="@dimen/dimen_32dp"
    android:background="@color/white_dynamic"
    android:orientation="vertical">

    <TextView
        style="@style/Kanit_Bold_Italic.Default.20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomendaciones"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/shape_black"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item_gray_2"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp">

            <TextView
                style="@style/Kanit_Semi_Bold.Default.20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:text="¿Cómo llegar?"
                android:textAllCaps="true"
                app:drawableStartCompat="@drawable/ic_como_llegar" />

            <TextView
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="La línea 2 del Metrobús o estación del metro tal te queda a 5 min caminando, si llegas en transporte privado, pide que te dejen en la plaza tal, si llegas en auto privado el estacionamiento tal." />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/shape_black"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item_gray_2"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp">

            <TextView
                style="@style/Kanit_Semi_Bold.Default.20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:text="Entrenamientos"
                android:textAllCaps="true"
                app:drawableStartCompat="@drawable/ic_training" />

            <TextView
                android:id="@+id/tvTrainingDescription"
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="Para prepararte para este evento te recomendamos estos 5 puntos que todo corredor debe saber." />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/shape_black"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item_gray_2"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp">

            <TextView
                style="@style/Kanit_Semi_Bold.Default.20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_16dp"
                android:gravity="center_vertical"
                android:text="Market place"
                android:textAllCaps="true"
                app:drawableStartCompat="@drawable/ic_shopping" />

            <TextView
                android:id="@+id/tvMarketplaceDescription"
                style="@style/Kanit_Regular.Default.14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="La ruta de este evento será en Trail, te recomendamos los siguientes productos para tu competencia sea la mejor: Tenis de Trail, cangurera, calcetines." />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>