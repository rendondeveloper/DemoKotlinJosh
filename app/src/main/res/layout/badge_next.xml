<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/badge_background"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/badge_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/badge_next_dummy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/badge_name_short"
            style="@style/Kanit_Regular.Default.16"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:gravity="center_horizontal"
            android:maxLines="4"
            android:text="Medio MaratÃ³n por el Amor y la Paz 2023"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/badge_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

