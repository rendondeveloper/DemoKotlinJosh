<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_16dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/icon_dummy_members" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Kanit_Medium.Default.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triatlón Internacional" />

            <TextView
                style="@style/Kanit_Medium.Default.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 febrero 2023"
                android:textColor="@color/label_secondary" />

            <TextView
                style="@style/Kanit_Medium.Default.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manzanillo, Col, México"
                android:textColor="@color/label_secondary" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/arrow_right_rounded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Kanit_Regular.Default.12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inscritos" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@drawable/recibidas_dummy"
                app:civ_border_color="#F3F4F6"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_marginStart="-5dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@drawable/avatar_send_dummy"
                app:civ_border_color="#F3F4F6"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_marginStart="-5dp"
                android:src="@drawable/activities_dummy"
                app:civ_border_color="#F3F4F6"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_marginStart="-5dp"
                android:src="@drawable/img_blog"
                app:civ_border_color="#F3F4F6"
                app:civ_border_width="1dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageCircleImageView"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:src="#F3F4F6"
                    app:civ_border_color="#F3F4F6"
                    app:civ_border_width="1dp" />

                <TextView
                    style="@style/Kanit_Medium.Default.10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/imageCircleImageView"
                    android:layout_alignTop="@id/imageCircleImageView"
                    android:layout_alignEnd="@id/imageCircleImageView"
                    android:layout_alignBottom="@id/imageCircleImageView"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="+4" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_view" />

</LinearLayout>