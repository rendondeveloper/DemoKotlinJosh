<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clBenefits"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_16dp">

    <ImageView
        android:id="@+id/benefit_image"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:src="@drawable/check_circuclar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/orange_as_light" />

    <TextView
        android:id="@+id/benefit_title"
        style="@style/Kanit_Semi_Bold.Default.16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/benefit_image"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/benefit_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/benefit_image"
        app:layout_constraintTop_toTopOf="@+id/benefit_image"
        app:layout_constraintVertical_bias="0.41000003"
        tools:text="10% de descuento en eventos" />

    <TextView
        android:id="@+id/benefit_description"
        style="@style/Kanit_Regular.Default.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:ellipsize="end"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/benefit_title"
        app:layout_constraintTop_toBottomOf="@+id/benefit_title"
        tools:text="Si por alguna razón no puedes asistir a este evento puedes solicitar el costo de tu inscripción abonándolo a tu WALLET de Asdeporte." />

    <TextView
        android:id="@+id/benefit_promotion"
        style="@style/Kanit_Regular.Orange.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/benefit_title"
        app:layout_constraintTop_toBottomOf="@+id/benefit_description"
        tools:text="Consulta Términos y Condiciones" />
</androidx.constraintlayout.widget.ConstraintLayout>