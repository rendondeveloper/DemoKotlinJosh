<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white_dynamic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Kanit_Bold_Italic.Default.16"
            android:textAllCaps="true"
            android:text="mi resultado más reciente"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/empty_event_clear"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Kanit_Medium.Default.14"
                    android:text="Triatlón astri la paz"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Kanit_Regular.Secondary.12"
                    android:text="17 de septiembre del 2022"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Kanit_Regular.Secondary.14"
                android:text="Categoría: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Kanit_Medium.Default.16"
                android:layout_marginEnd="10dp"
                android:text="5to"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Kanit_Regular.Secondary.14"
                android:text="Categoría: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Kanit_Medium.Default.16"
                android:text="5to"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Kanit_Regular.Secondary.14"
                android:text="Tiempo oficial: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Kanit_Medium.Default.16"
                android:layout_marginEnd="10dp"
                android:text="00:22:18"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver detalles"
                android:layout_gravity="end"
                android:gravity="end"
                style="@style/Kanit_Medium.Orange.14"
                android:textAllCaps="false"
                android:background="@android:color/transparent"/>

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>
