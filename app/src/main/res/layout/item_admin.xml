<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:paddingTop="2dp"
    android:background="@drawable/event_tribu_background"
    android:layout_marginTop="@dimen/dimen_4dp"
    android:layout_marginBottom="@dimen/dimen_12dp"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    app:cardCornerRadius="@dimen/dimen_12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_image"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@+id/person_image"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/Kanit_Semi_Bold_Italic.Default.16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Aarón Méndez" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnirme"
                style="@style/Kanit_Regular.Default.16"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:paddingHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/secondary_button"
                android:text="Seleccionar"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:backgroundTint="@color/black_dynamic" />
        </LinearLayout>
</RelativeLayout>