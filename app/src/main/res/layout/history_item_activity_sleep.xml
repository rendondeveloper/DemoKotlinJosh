<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/shape_gray">

    <TextView
        android:id="@+id/tvActivity"
        style="@style/Kanit_Bold.Default.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="VIERNES"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvActivityDate"
        style="@style/Kanit_Regular.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="31/01/2023"
        android:textColor="@color/label_secondary"
        app:layout_constraintEnd_toEndOf="@+id/tvActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvActivity"
        app:layout_constraintTop_toBottomOf="@+id/tvActivity" />

    <TextView
        android:id="@+id/tvActivityDateOfficial"
        style="@style/Kanit_Regular.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="Tiempo oficial"
        android:textColor="@color/label_secondary"
        app:layout_constraintBottom_toBottomOf="@+id/tvActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvActivityDateOfficialDate"
        style="@style/Kanit_Bold.Default.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="08:10:11 min"
        app:layout_constraintEnd_toEndOf="@+id/tvActivityDateOfficial"
        app:layout_constraintStart_toStartOf="@+id/tvActivityDateOfficial"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityDateOfficial" />

    <TextView
        android:id="@+id/tvActivityCalories"
        style="@style/Kanit_Regular.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Calorías"
        android:textColor="@color/label_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityDate" />

    <TextView
        android:id="@+id/tvActivityCaloriesData"
        style="@style/Kanit_Bold.Default.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="500 kcal."
        app:layout_constraintStart_toStartOf="@+id/tvActivityCalories"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityCalories" />

    <TextView
        android:id="@+id/tvActivityRitmo"
        style="@style/Kanit_Regular.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="54dp"
        android:text="Sueño efectivo"
        android:textColor="@color/label_secondary"
        app:layout_constraintEnd_toStartOf="@+id/tvActivityDistance"
        app:layout_constraintStart_toEndOf="@+id/tvActivityCalories"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityDate" />

    <TextView
        android:id="@+id/tvActivityRitmoData"
        style="@style/Kanit_Bold.Default.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="7:00:00"
        app:layout_constraintStart_toStartOf="@+id/tvActivityRitmo"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityRitmo" />

    <TextView
        android:id="@+id/tvActivityDistance"
        style="@style/Kanit_Regular.Default.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Puntaje de sueño"
        android:textColor="@color/label_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityDate" />

    <TextView
        android:id="@+id/tvActivityDistanceData"
        style="@style/Kanit_Bold.Default.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="85 pts"
        app:layout_constraintEnd_toEndOf="@+id/tvActivityDistance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvActivityDistance"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityDistance" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItemHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/background_item_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityRitmoData">

        <TextView
            android:id="@+id/tvCaloriesLabel"
            style="@style/Kanit_Regular.Secondary.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Calorías"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCaloriesData"
            style="@style/Kanit_Semi_Bold.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="444 kcal."
            app:layout_constraintEnd_toEndOf="@+id/tvCaloriesLabel"
            app:layout_constraintStart_toStartOf="@+id/tvCaloriesLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCaloriesLabel" />

        <View
            android:id="@+id/vSeparator1"
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/gray_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvMidLabel"
            app:layout_constraintStart_toEndOf="@+id/tvCaloriesLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/tvMidLabel"
            style="@style/Kanit_Regular.Secondary.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="RC promedio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMidLabelData"
            style="@style/Kanit_Semi_Bold.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140 lpm"
            app:layout_constraintEnd_toEndOf="@+id/tvMidLabel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvMidLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvMidLabel" />


        <View
            android:id="@+id/vSeparator2"
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/gray_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvTimeLabel"
            app:layout_constraintStart_toEndOf="@+id/tvMidLabel"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvTimeLabel"
            style="@style/Kanit_Regular.Secondary.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="35dp"
            android:text="Tiempo"
            app:layout_constraintBottom_toBottomOf="@+id/tvMidLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvTimeLabelData"
            style="@style/Kanit_Semi_Bold.Default.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="08:00:00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvTimeLabel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvTimeLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeLabel" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/graph_sleep"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dummy_sleep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clItemHistory" />


</androidx.constraintlayout.widget.ConstraintLayout>