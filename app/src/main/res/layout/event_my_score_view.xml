<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/event_time_background"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_12dp"
        android:paddingVertical="@dimen/dimen_10dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/Kanit_Regular.Default.12"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Actividad" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="78dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="6dp"
                    android:progress="95"
                    android:progressDrawable="@drawable/custom_progress_bar_colors" />

                <TextView
                    style="@style/Kanit_Regular.Default.12"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="95%" />

                <ImageView
                    android:contentDescription="@string/todo"
                    android:layout_width="@dimen/dimen_8dp"
                    android:layout_height="@dimen/dimen_8dp"
                    android:src="@drawable/arrow_top_border" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/Kanit_Regular.Default.12"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="SueÃ±o" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="78dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="6dp"
                    android:progress="75"
                    android:progressDrawable="@drawable/custom_progress_bar_colors" />

                <TextView
                    style="@style/Kanit_Regular.Default.12"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="75%" />

                <ImageView
                    android:contentDescription="@string/todo"
                    android:layout_width="@dimen/dimen_8dp"
                    android:layout_height="@dimen/dimen_8dp"
                    android:src="@drawable/arrow_bottom_border" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/Kanit_Regular.Default.12"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="HRV" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="78dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="6dp"
                    android:progress="85"
                    android:progressDrawable="@drawable/custom_progress_bar_colors" />

                <TextView
                    style="@style/Kanit_Regular.Default.12"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="85%" />

                <ImageView
                    android:contentDescription="@string/todo"
                    android:layout_width="@dimen/dimen_8dp"
                    android:layout_height="@dimen/dimen_8dp"
                    android:src="@drawable/arrow_bottom_border" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                style="@style/Kanit_Medium.Default.34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="75%" />

            <ImageView
                android:contentDescription="@string/todo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_admiracion" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>