<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:background="@drawable/gray_border_corner_3">

            <ImageView
                android:contentDescription="@string/todo"
                android:id="@+id/card_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_wallet"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/card_image">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mi Wallet"
                    style="@style/Kanit_Medium.Default.16"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$20,500.00 MXN"
                    style="@style/Kanit_Semibold.Default.16"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solo puedes pagar inscripciones"
                    style="@style/Kanit_Regular.Default.12"/>
            </LinearLayout>

        </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>