<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:background="@drawable/gray_border">

        <LinearLayout
            android:id="@+id/concept_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TriatlÃ³n Fuga Isla de Sacrificios"
                style="@style/Kanit_Semibold.Default.14"/>
            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costo por servicio"
                style="@style/Kanit_Regular.Default.14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prices_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$699.00"
                android:textAlignment="textEnd"
                style="@style/Kanit_Medium.Default.16"/>
            <TextView
                android:id="@+id/subprice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$71.00"
                android:textAlignment="textEnd"
                style="@style/Kanit_Regular.Default.14"/>
            <TextView
                android:id="@+id/delete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textAlignment="textEnd"
                style="@style/Kanit_Semibold.Orange.14"/>
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>