<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange_as_light" />
            <corners android:radius="100dp" />
            <stroke android:width="1dp" android:color="@color/orange_as_light" />
            <size android:width="52dp" android:height="@dimen/dimen_32dp" />
            <padding android:bottom="4dp" android:left="3dp" android:right="3dp" android:top="4dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/label_secondary" />
            <corners android:radius="100dp" />
            <stroke android:width="1dp" android:color="@color/label_secondary" />
            <size android:width="52dp" android:height="@dimen/dimen_32dp" />
            <padding android:bottom="4dp" android:left="3dp" android:right="3dp" android:top="4dp" />
        </shape>
    </item>
</selector>