<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="7dp"
        android:top="7dp"
        android:right="7dp"
        android:bottom="7dp">

        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6A00"
                android:endColor="#FF5255"
                android:height="1px"
                android:angle="135" />
            <corners android:radius="900dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/black_dynamic" />
            <corners android:radius="900dp"/>
        </shape>
    </item>

</layer-list>