<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AsdeporteV2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/orange_as_light</item>
        <item name="colorPrimary">@color/orange_as_light</item>
        <item name="colorPrimaryVariant">@color/orange_as</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black_dynamic</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowSplashScreenBackground">@color/orange_as_light</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
    </style>

    <style name="MyAppYellowTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/orange_as_light</item>
        <item name="android:textColorPrimary">@color/facebook</item>
        <item name="android:colorBackground">@color/green_dynamic</item>
    </style>

</resources>